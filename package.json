{
  "name": "personal-site",
  "description": "Alex Kersov personal site",
  "version": "0.0.1",
  "author": "Alex Kersov",
  "dependencies": {
    "animatewithsass": "git+https://github.com/geoffgraham/animate.scss.git",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.1",
    "gulp-clean-css": "^3.0.2",
    "gulp-compass": "^2.1.0",
    "gulp-csso": "^2.0.0",
    "gulp-file-include": "^1.0.0",
    "gulp-imagemin": "^3.1.1",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "gulp-svg2png": "^2.0.2",
    "gulp-uglify": "^2.0.1",
    "gulp.spritesmith": "^6.3.0",
    "merge-stream": "^1.0.1",
    "normalize.scss": "^0.1.0",
    "run-sequence": "^1.2.2",
    "svg2png": "3.0.0",
    "vinyl-buffer": "^1.0.0"
  },
  "devDependencies": {
    "gulp-watch": "^4.3.11"
  },
  "homepage": "https://bitbucket.org/AlexO29/personal-site#readme",
  "license": "ISC",
  "main": "gulp.js",
  "paths": {
    "base": "./",
    "sass": {
      "input": "./sass/",
      "inputName": "sass",
      "output": "./stylesheets/",
      "temp": "./.temp/sass/"
    },
    "js": {
      "output": "./scripts/"
    },
    "icons": {
      "output": "./.temp/icons/"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://AlexO29@bitbucket.org/AlexO29/personal-site.git"
  },
  "scripts": {
    "build": "gulp build",
    "postinstall": "npm build"
  },
  "config": {
    "sass": {
      "inputFiles": "./sass/*.scss",
      "tempFiles": "./.temp/sass/*.css"
    },
    "bake": {
      "inputFiles": "./views/index.html"
    },
    "cleanCss": {
      "compatibility": "ie7"
    },
    "js": {
      "inputFiles": "./scripts/index.js",
      "options": {
        "compress": "true",
        "mangle": "true"
      }
    },
    "icons": {
      "inputFiles": "./img/icons/*.svg",
      "options": {
        "width": "25",
        "height": "25"
      }
    },
    "sprite": {
      "inputFiles": "./.temp/icons/*.png",
      "imgName": "icons.png",
      "cssName": "icons.css",
      "imgOutputDir": "./img/sprite/",
      "cssOutputDir": "./sass/sprite/"
    }
  }
}
